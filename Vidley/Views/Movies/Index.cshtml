@model IEnumerable<Vidley.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Movies</h2>
@if (!Model.Any())
{
    <text>There are no Movies</text>
}
else
{
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>Movies</th>
                <th>Genre</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Details", "Customers", new { id = movie.Id }, null)</td>
                 
                    <td>@movie.GenreId</td>
                </tr>
            }
        </tbody>
    </table>
}
